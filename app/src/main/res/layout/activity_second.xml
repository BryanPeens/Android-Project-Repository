<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="c.b.a.fuelies.SecondActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="503dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="4dp">

        <TextView
            android:id="@+id/TextViewHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="New Driver Information"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/TextViewDriverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Driver Name"
            android:layout_below="@+id/TextViewHeading"
            android:layout_alignStart="@+id/EditTextDriverName" />

        <EditText
            android:id="@+id/EditTextDriverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/TextViewDriverName"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Bryan"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/TextViewRegistrationNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Registration Number"
            android:layout_below="@+id/EditTextDriverName"
            android:layout_alignStart="@+id/EditTextDriverName" />

        <EditText
            android:id="@+id/EditTextRegNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/TextViewRegistrationNumber"
            android:layout_below="@+id/TextViewRegistrationNumber"
            android:layout_marginTop="17dp"
            android:ems="10"
            android:hint="Reg..."
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/TextViewOdoReading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/EditTextRegNumber"
            android:layout_below="@+id/EditTextRegNumber"
            android:layout_marginTop="34dp"
            android:text="Odometer Reading" />

        <EditText
            android:id="@+id/EditTextOdoReading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/EditTextRegNumber"
            android:layout_alignStart="@+id/TextViewOdoReading"
            android:layout_below="@+id/TextViewOdoReading"
            android:layout_marginTop="22dp"
            android:ems="10"
            android:hint="120000"
            android:inputType="number"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="366dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/TextViewOdoReading"
            android:layout_marginBottom="16dp"
            android:onClick="addDriver"
            android:text="Save" />

        <TextView
            android:id="@+id/Model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/EditTextOdoReading"
            android:layout_below="@+id/EditTextOdoReading"
            android:layout_marginTop="14dp"
            android:text="Model" />

        <EditText
            android:id="@+id/EditTextModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/Model"
            android:layout_below="@+id/Model"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Hyundai"
            android:inputType="textPersonName" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
